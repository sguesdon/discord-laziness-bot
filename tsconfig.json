{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "paths": {
          "lib/*": ["../lib/*"]
        }
    },
    "files": [
        "./src/index.ts"
    ],
    "include": [
        "./node_modules/@types/node/index.d.ts",
        "./lib/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
